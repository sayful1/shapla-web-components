{
  "name": "@shapla/web-components",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.3",
    "@j1shin/rollup-plugin-lit-sass": "^2.0.0",
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing": "^3.0.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@web/test-runner": "^0.13.22",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "rollup": "^2.60.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^13.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "lit": "^2.0.2",
    "shapla-css": "^2.5.0"
  },
  "type": "module",
  "main": "dist/bundle.js",
  "module": "dist/bundle.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c && npm run analyze",
    "dev": "npm-run-all --parallel start watch",
    "watch": "rollup -c -w",
    "start": "serve",
    "install:test": "npm i --D @open-wc/testing @web/test-runner",
    "build:test": "npm run build && npm run test",
    "test": "web-test-runner test/**/*.test.{js,ts,tsx} --coverage --node-resolve",
    "test:watch": "web-test-runner test/**/*.test.{js,ts,tsx} --node-resolve --watch",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "analyze": "cem analyze --litelement --globs \"src/**/*.js\""
  },
  "customElements": "custom-elements.json"
}
